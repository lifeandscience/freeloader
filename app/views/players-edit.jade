extends layout

block body
	#container-inner
		h1 #{title}
		if(player)
			form.form-horizontal(method="post")
				.control-group
					label.control-label(for="balance") Balance ($): 
					.controls
						input(type="text", name="balance", value="#{player.balance.toFixed(2)}")
							
				.control-group
					label.control-label(for="todaysAction") Today's Action: 
					.controls
						// - player.todaysAction = player.todaysAction || player.getDefaultAction()
						select#todaysAction(name="todaysAction")
							option(value="")
							option(value="invest", selected=(player.todaysAction == "invest")) Invest
							option(value="freeload", selected=(player.todaysAction == "freeload")) Freeload	
							option(value="walkaway", selected=(player.todaysAction == "walkaway")) Walkaway	
				//.control-group
				//	label.control-label(for="defaultAction") Default Action: 
				//	.controls
				//		select#defaultAction(name="defaultAction")
				//			option(value="")
				//			option(value="invest", selected=(player.defaultAction == "invest")) Invest
				//			option(value="freeload", selected=(player.defaultAction == "freeload")) Freeload
				//			option(value="last-action", selected=(player.defaultAction == "last-action")) Repeat Last Action
				.control-group
					.controls
						button.btn(type="submit") Update Player
		else
			p You must specify a user to edit.